.page--homework_scoreboard
  .main
    .row
      max-width: 100vw !important;

  .col--rank
    width: rem(60px)
    text-align: center
    border-right: 1px solid $table-border-color

  .col--user
    width: 150px
    text-align: center

  .col--stu_class
    width: 7rem
    text-align: center

  .col--stu_name
    width: rem(100px)
    text-align: center

  .col--total_score, .col--time
    width: 3.5rem
    text-align: center

  .col--problem, .col--record
    width: 3rem
    border-left: 1px solid $table-border-color
    text-align: center

  +mobile()
    .col--problem, .col--record
      display: none
